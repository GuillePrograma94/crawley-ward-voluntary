---
import { marked } from 'marked';

interface Props {
    type: string;
    copyrightText?: string;
}

const { copyrightText } = Astro.props;
---

{
    copyrightText && (
        <footer class="px-4 py-16 sm:px-5 sm:py-24" data-sb-field-path="src/data/siteConfig.json:footer">
            <div class="mx-auto text-center max-w-7xl" data-sb-field-path=".copyrightText" set:html={marked.parse(copyrightText)} />
        </footer>
    )
}
